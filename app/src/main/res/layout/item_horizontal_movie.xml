<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="movie"
            type="com.cuongngo.cinemax.response.Movie" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        app:layout_constraintDimensionRatio="327:147"
        app:layout_constraintWidth_percent="1">

        <carbon.widget.ImageView
            android:id="@+id/iv_poster"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:carbon_cornerRadius="8dp"
            android:scaleType="fitCenter"
            loadImagePath="@{movie.poster_path}"
            app:layout_constraintDimensionRatio="112:147"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <carbon.widget.FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_poster"
            app:layout_constraintTop_toTopOf="@id/iv_poster"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:carbon_cornerRadius="8dp"
            android:background="#52252836"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{movie.vote_average.toString()}"
                android:textStyle="bold"
                android:textColor="#FF8700"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_start_rating"
                android:drawablePadding="4dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </carbon.widget.FrameLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_date"
            android:drawablePadding="4dp"
            android:text="2021"
            android:textColor="#92929D"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_poster"
            app:layout_constraintTop_toTopOf="@id/iv_poster"
            app:layout_constraintBottom_toBottomOf="@id/iv_poster"/>

        <carbon.widget.TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Premium"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="#FF8700"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            app:carbon_cornerRadius="6dp"
            app:layout_constraintTop_toTopOf="@id/iv_poster"
            app:layout_constraintStart_toStartOf="@id/tv_release_year"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@{movie.title}"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_type"
            app:layout_constraintBottom_toTopOf="@id/tv_release_year"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_release_year"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="4dp"
            android:text="148 Minutes"
            android:textColor="#92929D"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_release_year"
            app:layout_constraintBottom_toTopOf="@id/tv_genre"
            app:layout_constraintStart_toStartOf="@id/tv_release_year"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_film"
            android:drawablePadding="4dp"
            android:text="Action"
            android:textColor="#92929D"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_release_year"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>