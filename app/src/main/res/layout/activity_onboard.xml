<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/dark">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_on_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <carbon.widget.FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_24dp"
            android:layout_marginBottom="@dimen/_24dp"
            android:padding="32dp"
            app:carbon_cornerRadius="32dp"
            android:background="#171725"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_onboard_slogan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="The biggest international and local film streaming"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:lineSpacingExtra="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Semper in cursus magna et eu varius nunc adipiscing. Elementum justo, laoreet id sem semper parturient. "
                    android:gravity="center"
                    android:textColor="#92929D"
                    android:textSize="14sp"
                    android:layout_marginTop="14dp"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_onboard_slogan" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_next_onboard"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_content"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dotsColor="#6612CDD9"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="10dp"
                    app:dotsSpacing="6dp"
                    app:dotsWidthFactor = "2.5"
                    app:dotsClickable="true"
                    app:selectedDotColor="@color/blue_accent"
                    app:progressMode="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/btn_next"
                    app:layout_constraintBottom_toBottomOf="@id/btn_next" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </carbon.widget.FrameLayout>

        <carbon.widget.FrameLayout
            android:id="@+id/fl_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="@dimen/_24dp"
            android:background="#52252836"
            app:carbon_cornerRadius="16dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Skip"
                android:textColor="@color/blue_accent"
                />

        </carbon.widget.FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>